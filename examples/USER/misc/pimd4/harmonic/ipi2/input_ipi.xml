<simulation>
   <total_steps>1000000</total_steps>
   <prng><seed>975481</seed></prng>
   <ffsocket mode='unix' name='lammps'>
         <address> lmp2 </address>
         <port> 9909 </port>
   </ffsocket>
	<system>
		<initialize nbeads='4'> 
			<file mode='xyz' > spring.xyz </file>
      <cell mode='manual' units="atomic_unit"> [ 5.0,0,0,0, 5.0,0,0,0, 5.0 ] </cell>
			<masses mode='manual' units='dalton'>
          [ 1.0 ]
			</masses>
		</initialize>
		<motion mode='dynamics'>
			<dynamics mode='nvt'>
				<thermostat mode='langevin'>
				<tau units='picosecond'>0.01</tau>
				</thermostat>
				<timestep units='picosecond'> 0.001</timestep>
			</dynamics>
			<fixcom>True</fixcom>
		</motion>
		<ensemble>
			<temperature units='kelvin'>3.42</temperature>
		</ensemble>
		<forces>
			<force forcefield='lammps'> </force>
		</forces>
	</system>
   	<output prefix='spring'>
		<properties stride='100' filename='data'>  [ step, time{femtosecond}, kinetic_md{atomic_unit}, spring{atomic_unit}, potential{atomic_unit}, conserved{atomic_unit}, kinetic_td{atomic_unit}, kinetic_cv{atomic_unit}, pressure_cv{atomic_unit} ] </properties>
		<trajectory filename='x' stride='100' format='pdb' cell_units='angstrom'> positions{atomic_unit} </trajectory>
	</output>
</simulation>
